<h1>Listing appointments</h1>

<table>
  <tr>
    <th>User_id</th>
    <th>Object_id</th>
    <th>Date</th>
    <th>Time</th>
    <th style="color:black;text-align:left">Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.user_id %></td>
    <td><% p= Patient.find(appointment.patient_id) %><%= p.name %></td>
    <td><%= appointment.date.strftime("%Y-%m-%d") %></td>
    <td><%= appointment.time.strftime("%H:%m") %></td>
    <td><%= appointment.comment %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

